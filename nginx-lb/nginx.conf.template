events {
    worker_connections 1024;
}

http {
    # Upstream for Order Services (2 instances)
    upstream order_service {
        # Round-robin load balancing (default)
        server ${ORDER_SERVICE_1_URL} max_fails=3 fail_timeout=30s;
        server ${ORDER_SERVICE_2_URL} max_fails=3 fail_timeout=30s;
    }

    # Log format with upstream server info
    log_format upstreamlog '[$time_local] $remote_addr - $server_name to: $upstream_addr: $request upstream_response_time $upstream_response_time msec $msec request_time $request_time';

    server {
        listen 80;
        server_name _;

        access_log /var/log/nginx/access.log upstreamlog;
        error_log /var/log/nginx/error.log warn;

        # Health check endpoint
        location /health {
            access_log off;
            return 200 "Nginx Load Balancer OK\n";
            add_header Content-Type text/plain;
        }

        # Proxy all requests to order service backend
        location / {
            proxy_pass http://order_service;
            
            # Headers
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # Add custom header to show which backend server responded
            add_header X-Upstream-Server $upstream_addr always;
            add_header X-Load-Balancer "Nginx-Railway" always;
            
            # Timeouts
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
            
            # Retry logic
            proxy_next_upstream error timeout http_500 http_502 http_503;
            proxy_next_upstream_tries 2;
        }
    }
}
